<Window x:Class="PL.AddUpdateProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddUpdateProduct" Height="450" Width="800">
    <Grid>
        <Label Content="ID product:"/>
        <TextBox x:Name="ID"></TextBox>
        <Label Content="Name of product:"/>
        <TextBox x:Name="NameP"></TextBox>
        <Label Content="Price:"/>
        <TextBox x:Name="PriceP"></TextBox>
        <Label Content=" Category:"/>
        <ComboBox x:Name="CategoryP"></ComboBox>
        <Label Content="Amount in stock:"/>
        <TextBox x:Name="AmountP"></TextBox>
        <Button></Button>
    </Grid>
</Window>
